import java.awt.Graphics;
import java.awt.Graphics2D;
import java.awt.Color;
import java.awt.Rectangle;

import javax.swing.JComponent;

/**
This component draws a shape.
 */
public class MovingObjectComponent extends JComponent 
{
    private MovingObject obj1;

    public MovingObjectComponent(int frameWidth, int frameHeight) {
        obj1 = new MovingObject(frameWidth / 2, frameHeight / 2, Color.red);
    }

    public void paintComponent(Graphics g)
    {
        Graphics2D g2 = (Graphics2D) g;
        obj1.draw(g2);
    }

    public void moveBy(double dx, double dy) {
        double newX = obj1.getX() + dx;
        double newY = obj1.getY() + dy;
        if(newX <= getWidth() - 25 && newX >= 25) 
            obj1.moveBy(dx, 0);
        if(newY <= getHeight() - 25 && newY >= 25) 
            obj1.moveBy(0, dy);
        repaint();
    }
}

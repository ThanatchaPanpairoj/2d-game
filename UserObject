import java.awt.Graphics2D;
import java.awt.geom.Ellipse2D;
import java.awt.Color;

/**
 * Describes user object.
 *
 * @author (Thanatcha Panpairoj)
 * @version (5/19/15)
 */
public class UserObject 
{
    private double xLeft;
    private double yTop;
    private Color color;

    /**
    Constructs an user object with a given center.
    @param x the x coordinate of the center
    @param y the y coordinate of the center
     */
    public UserObject(int x, int y, Color color)
    {
        xLeft = x;
        yTop = y;
        this.color = color;
    }

    /**
    Draws the object.
    @param g2 the graphics context
     */
    public void draw(Graphics2D g2)
    {
        Ellipse2D.Double circle = new Ellipse2D.Double(xLeft - 25, yTop - 25, 50, 50);
        //could be any object, doesn't have to be an ellipse
        g2.draw(circle);

        g2.setPaint(color);
        g2.fill(circle);
    }

    /**
     * Moves user object to (x,y)
     *
     * @param x the x-coordinate
     * @param y the y-coordinate
     * @return void
     */
    public void moveTo(double x, double y) {
        xLeft = x;
        yTop = y;
    }

    /**
     * Moves user object by an amount.
     *
     * @param dx change in x
     * @param dy change in y
     * @return void
     */
    public void moveBy(double dx, double dy) {
        xLeft += dx;
        yTop += dy;
    }

    /**
     * Returns x-coordinate of user object.
     *
     * @return xLeft
     */
    public double getX() {
        return xLeft;
    }

    /**
     * Returns y-coordinate of user object.
     *
     * @return yTop
     */
    public double getY() {
        return yTop;
    }
}
